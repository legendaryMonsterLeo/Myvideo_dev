/* pages/videoDetailShow/videoDetailShow.wxss */
page{
  width: 100%;
  height: 100%;
}
.search {
    margin-left: 20rpx;
    justify-content: space-between;
    display: flex;
    flex-direction: row;
}
.tools {
  display: flex;
  position: fixed;
  right: 5rpx;
  flex-direction: column;
}
.userinfo-avatar {
  width: 100rpx;
  height: 100rpx;
  margin: 20rpx;
  border-radius: 50%;
}
.user-image{
  position: relative
}

.user-image .userinfo-add{
  position: absolute;
  top: 92rpx;
  width: 46rpx;
  height: 46rpx;
  margin: 0 auto;
  left: 0;
  right: 0;
}
.icon {
  width: 90rpx;
  height: 90rpx;
}

.icon2 {
  width: 60rpx;
  height: 60rpx;
}
.icon3{
  width: 80rpx;
  height: 80rpx;
}

.right-icon {
  margin: 40rpx 32rpx 0rpx;
}

.text {
  color: white;
  /* width: 100rpx; */
  text-align: center;
  margin: 0rpx 20rpx;
}

.jindu {
  position: fixed;
  bottom: 100rpx;
  height: 5rpx;
  background-color: white;
}

.jindu-back {
  position: fixed;
  bottom: 100rpx;
  width: 100%;
  height: 5rpx;
  background-color: gray;
}

.footer {
  position: fixed;
  /* height: 42px; */
  bottom: 0;
  display:flex;
  padding: 5rpx 0;
  width: 100%;
  background: rgba(0,0,0,0.4);
}

.apply {
  display:flex;
  flex: 1;
  justify-content: center;
  align-items: center;
  /* position: relative; */
  /* margin: 0 auto; */
  /* width: 100rpx; */
  font-size: 16px;
  color: #A1A1A1;
}
.apply-active{
  color: #FFFFFF;
}

.container-words {
  position: absolute;
  top: 88%;
  left: 50%;
  transform: translate(-50%,-50%);
  margin-left: 38rpx;
  width: 100%;
  color: white;
  font-size: 14px;
}
.video-desc {
  margin-top: 20rpx;
  width: 600rpx;
  height: 100rpx;
  white-space: pre-wrap;
}
.talks-layer {
  position: absolute;
  bottom: 0;
  height: 0;
  width: 100%;
  overflow: hidden;
  /* background-color: blue; */
}
.layer-white-space {
  height: 100%;
  width: 100%;
  background-color: #ccc;
  opacity: .5;
  /* background-color: green; */
}
.talks {
  position: absolute;
  height: 900rpx;
  width: 100%;
  bottom: 0rpx;
  /* background-color: #0D0D0D; */
  background: rgba(13, 13, 13, 0.9);
  border-radius: 20rpx 20rpx 0 0;
  /* background-color: red; */
}
.talk-header {
  width: 100%;
  height: 70rpx;
  padding-top: 30rpx;
  text-align: center;
}

.talk-body {
  height: 700rpx;
}

.talk-footer {
  /* position: fixed;
  bottom: 0; */
  padding: 10rpx 30rpx;
}

.talk-count {
  font-size: 14px;
  height: 40rpx;
  color: #6b696a;
}

.talk-close {
  position: absolute;
  top: 40rpx;
  right: 40rpx;
  width: 22rpx;
  height: 22rpx;
}
.talk-input {
  padding: 10rpx 20rpx;
  background:#ffffff;
  border-radius: 30rpx;
  text-indent: 10rpx;
  font-size: 16px
}
.talk-item {
  display: flex;
  flex-direction: row;
  align-items: flex-start;
  width: 100%;
  color: white;
}
.talk-item-left {
  display: flex;
  flex-direction: row;
  margin: 20rpx 30rpx;
}

.talk-item-face {
  width: 64rpx;
  height: 64rpx;
  border-radius: 50%;
}

.talk-item-right {
  width: 100%;
  /* border-bottom: solid 1rpx #6a6869; */
  margin-right: 30rpx;
  /* margin-bottom: 20rpx; */
  padding:0 0 20rpx 0;
  border-bottom: 1px solid  #292527;
}

.talk-item-nickname {
  font-size: 13px;
  color: #A1A1A1;
}

.talk-item-content {
  display: block;
  margin-right: 30rpx;
  width: 100%;
  font-size: 16px;
  /* white-space: pre-line; */
}

.talk-item-time {
  font-size: 12px;
  color: #5B5B5B;
  display:block;
}
.comment-s-box-list {
  width: 84%;
  height: auto;
  float: right;
  margin-top: 10rpx;
  margin-right: 15rpx;
  border-radius: 20rpx;
  background: rgba(116, 116, 116, 0.3);
  /* padding-bottom: 12rpx; */
}
.video-logo-more{
  width: 22rpx;
  height: 20rpx;
}
.play-btn {
  position: absolute;
  top: 50%;
  left: 50%;
  transform: translate(-50%,-50%);
  height: 128rpx;
  width: 128rpx;
}
.vvideo {
  height: 100vh;
  width: 100vw;
  position: absolute;
  top: 0;
  left: 0;
}