<view>
  <view class="login-icon">
    <image class="login-img" src="../resource/images/dsp.jpg"></image>
  </view>
  <view class="login-form">
    <form bindsubmit="doRegist">
      <!-- 账号 -->
      <view class="inputView">
        <image class="nameImage" src="../resource/images/username.png"></image>
        <label class="loginLable">账号</label>
        <input name="username" placeholder="请输入账号" class="inputText"></input>
      </view>
      <!-- 分割线 -->
      <view class="line"></view>
      <!-- 密码 -->
      <view class="inputView">
        <image class="KeyImage" src="../resource/images/password.png"></image>
        <label class="loginLable">密码</label>
        <input name="password" password="true" placeholder="请输入密码" class="inputText"></input>
      </view>
      <!-- 按钮 -->
      <view>
        <button type="primary" form-type="submit" class="loginBtn">注册</button>
      </view>
      <view>
        <button type="warn" class="goLoginBtn" bindtap="goLoginPage">返回登录</button>
      </view>
    </form>
  </view>
</view>